@using CrudProductos.Models
@{
    Layout = null;
    List<Producto> lista = ViewBag.datos != null ? ViewBag.datos : new List<Producto>();
}

<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    <meta name="viewport" content="width=device-width" />
    <title>Productos</title>
    <style>
        thead {
            display: table-header-group
        }

        
        tfoot {
            display: table-row-group
        }

        
        tr {
            page-break-inside: avoid
        }

        
    </style>
</head>
<body>
    <h2 style="color:darkcyan" ; text-align="center">Listado de Productos</h2>
    <table class="table table-responsive table-striped table-responsive table-condensed" >

        <thead>

            <tr>
                <th>ID</th>
                <th>Producto</th>
                <th>Descripcion</th>
                <th>Precio</th>
             

            </tr>
        </thead>
        <thbody>
            @if (lista.Count() > 0)
            {
                foreach (var p in lista)
                {
                    <tr>
                        <td>@p.id</td>
                        <td>@p.producto</td>
                        <td>@p.descripcion</td>
                        <td>@p.precio</td>
                        
                       

                        @*<td>@Math.Round(a.promedio, 2)</td>*@

                    </tr>
                }
            }
            else

            {
                <tr>

                    <td colspan="4">
                        <b>¡No hay datos que mostrar!</b>
                    </td>

                </tr>
            }
        </thbody>
    </table>
</body>
</html>
