@model CrudProductos.Models.Producto
@{
    ViewBag.Title = "Create_Update";
}
<br />
<br />
<center>
    @if (Model.id > 0)
    {
        <h1>Agregar Producto</h1>
    }
    else
    {
        <h1>Actualizar Producto</h1>
    }


</center>
<br />

@using (Html.BeginForm("Create_Update", "Producto", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id)
   


    <div class="container-fluid">

        <div class="row">
            <center>
                <div class="imagen" class="col-4">
                    <img src="~/images/bolsa.png" width="350px;" />
                </div>
            </center>


            <div class="col-4">
                <table class="table table-condensed table-responsive table-striped table-hover">

                    <tr>

                        <td><label>Producto:</label></td>
                        <td>
                            @Html.TextBoxFor(x => x.producto, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.producto, null, new { @class = "text-danger" })
                        </td>
                    </tr>


                    <tr>

                        <td><label>Descripción:</label></td>
                        <td>
                            @Html.TextAreaFor(x => x.descripcion, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.descripcion, null, new { @class = "text-danger" })
                        </td>
                    </tr>


                    <tr>

                        <td><label>Precio:</label></td>
                        <td>
                            @Html.TextBoxFor(x => x.precio, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.precio, null, new { @class = "text-danger" })
                        </td>
                    </tr>



                    <tr>


                        <td colspan="2">
                            <center>
                                <button class="btn btn-success">Enviar Datos</button>

                            </center>
                        </td>

                    </tr>
                </table>

            </div>

        </div>


    </div>



}